# Environment variables template for Docker Compose
# Copy this file to .env and customize the values

# Database Configuration
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=mutumwa_ai_dev

# Redis Configuration (no auth by default, add if needed)
# REDIS_PASSWORD=your_redis_password_here

# Application Ports
COLLECTOR_PORT=8888
SERVER_PORT=3001
FRONTEND_PORT=3000

# Environment
NODE_ENV=production

# Database & Redis URLs (automatically constructed from above vars)
# DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@postgres:5432/${POSTGRES_DB}
# REDIS_URL=redis://redis:6379

# Domains (for Traefik routing in Coolify)
SERVER_DOMAIN=localhost
FRONTEND_DOMAIN=localhost

# API Configuration
NEXT_PUBLIC_API_URL=http://server:3001

# Coolify Configuration
# These are automatically managed by Coolify when deployed
# COOLIFY_APP_ID=
# COOLIFY_ENVIRONMENT_ID=
